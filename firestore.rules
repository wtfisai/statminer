rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User sessions - users can only access their own data
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Chat sessions - users can only access their own chat sessions
    match /chatSessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Messages within chat sessions
    match /chatSessions/{sessionId}/messages/{messageId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == get(/databases/$(database)/documents/chatSessions/$(sessionId)).data.userId;
    }
    
    // Neo4j datasets - allow read/write for authenticated users on their own data
    match /neo4jDatasets/{datasetId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }
    
    // Webhook endpoints - only allow access to user's own webhooks
    match /webhooks/{webhookId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // API usage statistics - users can only access their own usage data
    match /apiUsage/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // System configurations - read-only for authenticated users
    match /config/{configId} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow through admin functions
    }
    
    // Public database configurations - read-only for all authenticated users
    match /databaseConfigs/{configId} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow through admin functions
    }
    
    // Analytics events - write-only for authenticated users
    match /analytics/{eventId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Only allow reading through functions
    }
    
    // Backup metadata - users can only access their own backup data
    match /backups/{backupId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Default deny rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}